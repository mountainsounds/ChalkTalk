include ../mixins/mixins

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    link(rel="stylesheet", href='https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.css')
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
    link(rel="stylesheet", href="/css/main.css")

  body
    script.
      let userLoggedIn = !{userLoggedInJs};

    .wrapper
      .row
        nav.col-2.navCol
          .navContainer

            a.navIcon.blue(href="/")
              span#hope
                i.fas.fa-mountain
                p#content(data-content='Home')

            a.navIcon(href="/search")
              span#hope
                i.fas.fa-search
                p#content(data-content='Search')

            a.navIcon(href="/notifications")
              span#hope
                i.fas.fa-bell
                p#content(data-content='Notifications')
                span#notificationsBadge

            a.navIcon(href="/messages")
              span#hope
                i.fas.fa-envelope
                p#content(data-content='Messages')
                span#messagesBadge

            a.navIcon(href="/profile")
              span#hope
                i.fas.fa-user
                p#content(data-content='Profile')

            a.navIcon(href="/logout")
              span#hope
                i.fas.fa-sign-out-alt
                p#content(data-content='Logout')

        .mainSectionContainer.col-10.col-md-8.col-lg-6
          .titleContainer
            h1 #{pageTitle}
            block headerButton

          block content

        .rightSide.d-none.d-md-block.col-md-2.col-lg-4
    #notificationList


    script(src='https://kit.fontawesome.com/4ce2ad6077.js' crossorigin='anonymous')

    script(src='https://code.jquery.com/jquery-3.6.0.min.js', integrity='sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=', crossorigin='anonymous')
    //- Image Cropper
    script(src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.12/cropper.min.js")

    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js', integrity='sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1', crossorigin='anonymous')

    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js', integrity='sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM', crossorigin='anonymous')

    script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.0.4/socket.io.js')

    block scripts

    script(src="/js/common.js")
    script(src="/js/clientSocket.js")
