extends layouts/login-layout.pug

block content
  .loginContainer
    h1 Login
    form(action="" method="post")

      p.errorMessage #{errorMessage}

      input(type="text", name="logUsername", placeholder="Username or email", value=logUsername required="" autocomplete='username')
      input(type="password", name="logPassword", placeholder="Password", required="" autocomplete='current-password')
      input(type="submit", value="Login")
    a(href="/register") Need an account? Register here.
